{
    // Window
    "window.autoDetectColorScheme": true,
    "window.title": "${appName}",
    "window.menuBarVisibility": "toggle", // Hide menu unless `alt` pressed
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,
    "chat.commandCenter.enabled": false, // chat, for me, counts as window component, so it stays here...

    // Telemtry
    "telemetry.telemetryLevel": "off",
    "telemetry.editStats.enabled": false,
    // "telemetry.feedback.enabled": false,

    // Extensions
    "extensions.allowed": {
        "littensy.charmed-icons": "stable", // Icons
        "ms-vscode.cpptools": "stable", // C/C++ LSP
        "JohnnyMorganz.luau-lsp": "stable", // ROBLOX LSP
        "esbenp.prettier-vscode": "stable", // Code formatting
        "JohnnyMorganz.stylua": "stable", // Code formatting (temporary)
        "Codeium.codeium": "stable" // Autocompletion
        // ...any other extensions are bloat to be honest...!
    },

    // Theme
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "workbench.preferredDarkColorTheme": "Default Dark Modern",
    "workbench.preferredHighContrastLightColorTheme": "Default High Contrast Light",
    "workbench.preferredHighContrastColorTheme": "Default High Contrast",
    "workbench.iconTheme": "charmed-icons",
    "workbench.statusBar.visible": false,

    // Workspace
    "breadcrumbs.enabled": false, // default: true
    "workbench.editor.enablePreview": true,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.highlightModifiedTabs": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": false,
    "workbench.editor.showIcons": false,
    // "workbench.editor.showTabs": "single",
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.activityBar.location": "hidden", // default: "top"
    "workbench.layoutControl.enabled": false,

    // Layout
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "bottom",

    // Cursor
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "JetBrainsMono NF, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,

    // Terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "JetBrainsMono NF, Consolas, 'Courier New', monospace",

    // Editor
    "editor.guides.indentation": false,
    "editor.minimap.enabled": false,
    "editor.glyphMargin": true,
    "editor.renderLineHighlight": "none",
    // "editor.lineNumbers": "relative",

    // Explorer
    "explorer.compactFolders": true,
    "explorer.autoReveal": true,

    // Formatting
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.showWords": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },

    // Files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Git
    "git.autofetch": true,
    "git.inputValidationSubjectLength": 50,
    "git.decorations.enabled": true,

    // Formatters
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // "[java]": {},
    // "[lua]": {}, // use selene
    "[luau]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua"
    },
